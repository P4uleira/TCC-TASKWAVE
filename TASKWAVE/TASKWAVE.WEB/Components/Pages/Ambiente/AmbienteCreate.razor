@page "/AmbienteCreate"
@rendermode InteractiveServer
@using TASKWAVE.WEB.Components.Layout
@layout NavMenu
@inject HttpClient Http

<PageTitle>Criar Ambiente</PageTitle>

<main>
    <div class="sidebar" style="width:270px;">
        <NavMenuOptions Options="@Options" />
    </div>

    <section>
        <div class="m-md-5">
            <div>
                <h2 class="text-white mb-2">Meus Ambientes</h2>
                <h4 class=" mb-4">Criar Ambiente</h4>
            </div>

            <EditForm Model="@environmentToCreate" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-warning" />

                <div class="form-group mb-3 ">
                    <label class="mb-3">Nome do Ambiente</label>
                    <InputText class="form-control" @bind-Value="environmentToCreate.environmentName" placeholder="Insira o nome do Ambiente" />
                </div>

                <div class="form-group mb-3">
                    <label>Descrição do Ambiente</label>
                    <InputTextArea class="form-control" @bind-Value="environmentToCreate.environmentDescription" placeholder="Insira a descrição do Ambiente" />
                </div>

                <div class="d-flex w-100 justify-content-center">
                    <button type="submit" class="btn text-white w-25 rounded-pill" style="background-color: #748CAB;">
                        Criar Ambiente
                    </button>
                </div>
            </EditForm>

            @if (!string.IsNullOrEmpty(mensageResponse))
            {
                <div class="mt-3 alert alert-info">@mensageResponse</div>
            }
        </div>
    </section>
</main>
@code {
    List<HyperLink> Options = new List<HyperLink>
 {
     new HyperLink("/AmbienteCreate", "Criar Ambiente", "Criar Ambiente", HyperLink.TypeOfIcon.Add),
     new HyperLink("/Ambiente", "Gerenciar Ambientes", "Gerenciar Ambientes", HyperLink.TypeOfIcon.List)
 };

    private AmbienteRequest environmentToCreate = new();
    private string mensageResponse;

    protected override async Task OnInitializedAsync()
    {
        bool uservalid = await ApiService.SetAuthorizeHeaderAsync();
        if (!uservalid)
        {
            NavigationManager.NavigateTo("/");
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("api/Ambiente", environmentToCreate);

            if (response.IsSuccessStatusCode)
            {
                mensageResponse = "Ambiente criado com sucesso.";
                environmentToCreate = new();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                mensageResponse = $"Erro: {error}";
            }
        }
        catch (Exception ex)
        {
            mensageResponse = $"Erro na requisição: {ex.Message}";
        }
    }
}

