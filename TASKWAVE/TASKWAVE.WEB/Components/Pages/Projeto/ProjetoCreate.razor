@page "/ProjetoCreate"
@rendermode InteractiveServer
@using TASKWAVE.WEB.Components.Layout
@layout NavMenu
@inject HttpClient Http

<PageTitle>Criar Projeto</PageTitle>


<div class="sidebar" style="width:270px;">
    <NavMenuOptions Options="@Options" />
</div>

<section>
    <div class="m-md-5">
        <div>
            <h2 class="text-white mb-2">Meus Projetos</h2>
            <h4 class=" mb-4">Criar Projeto</h4>
        </div>

        <EditForm Model="@projectToCreate" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-warning" />

            <div class="form-group mb-3">
                <label class="mb-3">Nome do Projeto</label>
                <InputText class="form-control" @bind-Value="projectToCreate.projectName" placeholder="Insira o nome do Projeto" />
            </div>

            <div class="form-group mb-3">
                <label>Descrição do Projeto</label>
                <InputTextArea class="form-control" @bind-Value="projectToCreate.projectDescription" placeholder="Insira a descrição do Projeto" />
            </div>

            <div class="form-group mb-3">
                <label class="mb-3">Data de Criação do Projeto</label>
                <InputDate class="form-control" @bind-Value="projectToCreate.projectCreationDate" />
            </div>

            <div class="form-group mb-4">
                <label class="mb-3">Equipe do Projeto</label>
                <InputSelect class="form-control" @bind-Value="projectToCreate.teamId">
                    <option value="">Selecione a equipe que o projeto pertence</option>
                    @foreach (var team in teamList)
                    {
                        <option value="@team.teamId">@team.teamName</option>
                    }
                </InputSelect>
            </div>

            <div class="d-flex w-100 justify-content-center">
                <button type="submit" class="btn text-white w-25 rounded-pill" style="background-color:#748CAB;">
                    Criar Projeto
                </button>
            </div>
        </EditForm>

        @if (!string.IsNullOrEmpty(mensageResponse))
        {
            <div class="mt-3 alert alert-info">@mensageResponse</div>
        }
    </div>
</section>



@code {

    List<HyperLink> Options = new List<HyperLink>
    {
        new HyperLink("/ProjetoCreate", "Criar Projeto", "Criar Projeto", HyperLink.TypeOfIcon.Add),
        new HyperLink("/Projeto", "Gerenciar Projetos", "Gerenciar Projetos", HyperLink.TypeOfIcon.List)
    };

    private List<EquipeResponse> teamList = new();
    private ProjetoRequest projectToCreate = new();
    private string mensageResponse;

    protected override async Task OnInitializedAsync()
    {
        await GetSectorsAll();
    }

    private async Task GetSectorsAll()
    {
        try
        {
            teamList = await Http.GetFromJsonAsync<List<EquipeResponse>>("api/Equipe");
        }
        catch (Exception ex)
        {
            mensageResponse = $"Erro ao carregar equipes: {ex.Message}";
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("api/Projeto", projectToCreate);

            if (response.IsSuccessStatusCode)
            {
                var allProjects = await Http.GetFromJsonAsync<List<ProjetoRequest>>("api/Projeto");
                var lastProject = allProjects?.OrderByDescending(p => p.projectId).FirstOrDefault();

                if (projectToCreate.teamId is not null && projectToCreate.teamId > 0)
                {
                    var response1 = await Http.PostAsJsonAsync(
                        $"api/Equipe/AddProjectToTeam/{projectToCreate.teamId}/{lastProject.projectId}", "");
                }

                mensageResponse = "Projeto criado com sucesso.";

                projectToCreate = new();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                mensageResponse = $"Erro: {error}";
            }
        }
        catch (Exception ex)
        {
            mensageResponse = $"Erro na requisição: {ex.Message}";
        }
    }

}

